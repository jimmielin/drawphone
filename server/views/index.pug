extends layout

block js
  // Drawphone JS
  script(src=`${js}`)

block content
  .mt-3.mb-2
    img.mr-1(src='pencil-alt.svg' alt='' width='18')
    img.ml-1(src='phone-alt.svg' alt='' width='18')
  h1#title Drawphone
  p#subtitle Telephone with pictures
  hr
  div#loading Loading...
  div#mainmenu.d-none
    .btn-toolbar
      button#joinbtn.btn.btn-default.btn-lg.mr-2(type='button') Join Game
      button#newbtn.btn.btn-primary.btn-lg(type='button') New Game
    br
    .btn-toolbar
      button#archivebtn.btn.btn-info.mt-2(type='button') View Previous Results
  div.row.justify-content-center
    div.col
      div#joinmenu.d-none
        h5 Join a game
        form
          .input-container
            label Game Code:
            .form-group
              input#joinincode.form-control(type='text', placeholder='abcd', autocomplete='off')
            label Name:
            .form-group
              input#joininname.form-control(type='text', placeholder='Use your real name!', maxlength=16)
          .btn-toolbar
            button#joinmenu-back.btn.btn-default.btn-lg.mr-2(type='button') Back
            button#joinmenu-go.btn.btn-default.btn-lg(type='submit') Join
      div#newmenu.d-none
        h5 Start a game
        form
          .input-container
            label Name:
            .form-group
              input#newinname.form-control(type='text', placeholder='Use any name', maxlength=16)
          .btn-toolbar 
            button#newmenu-back.btn.btn-default.btn-lg.mr-2(type='button') Back
            button#newmenu-go.btn.btn-default.btn-lg(type='submit') Start
  div#lobby.d-none
    div.row.justify-content-center.mb-2
      div.col-sm-8
        h5 Players:
        ul#lobby-players.list-unstyled.row
      br
      button#lobby-prevres.btn.btn-default.mt-2(type='button').d-none View Last Round's Results
      br
    div.row.justify-content-center.mb-2
      div#lobby-settings.col-sm-8.d-none
        h5 Game Settings:
        .checkboxes.mb-3
          .custom-control.custom-switch
            input#lobby-settings-wordfirst.custom-control-input.lobby-setting(type='checkbox',checked='')
            label.custom-control-label(for='lobby-settings-wordfirst') Free writing mode
          .custom-control.custom-switch
            input#lobby-settings-showNeighbors.custom-control-input.lobby-setting(type='checkbox')
            label.custom-control-label(for='lobby-settings-showNeighbors') Show identity of players you are passing to and from
        label Word pack:
        select.form-control.lobby-setting#lobby-settings-wordpack.mb-2(disabled='')
          option(disabled='', selected='') Select a word pack...
          for item in wordpacks
            option #{item}
        label Time limit:
        select.form-control.lobby-setting#lobby-settings-timelimit
          option(disabled='') Select a drawing time limit...
          option(selected='') No time limit (recommended)
          option 5 seconds
          option 10 seconds
          option 15 seconds
          option 30 seconds
          option 45 seconds
          option 1 minute
        div#lobby-settings-bots.d-none
          button#lobby-settings-addbot.btn.btn-default.mt-2(type='button') Add Bot Player
          button#lobby-settings-removebot.btn.btn-default.mt-2(type='button') Remove Bot Player
    br
    .btn-toolbar
      button#lobby-leave.btn.btn-danger.btn-lg.mr-2(type='button') Leave Game
      button#lobby-start.btn.btn-primary.btn-lg.d-none(type='button') Start Game


  div#game.d-none
    div#neighboring-players-container.neighboring-players-container
      div#previous-player-container.player-name.d-none
        div Receiving from
        div#previous-player
      span#previous-player-arrow
        img(src='arrow-right.svg' alt='right-arrow' width='24')
      div#you-player.player-name
      span#next-player-arrow
        img(src='arrow-right.svg' alt='right-arrow' width='24')
      div#next-player-container.player-name
        div Sending to
        div#next-player
    div#game-drawing.d-none
      h5#game-timer
      canvas#game-drawing-canvas.drawing(width='600', height='600')
    div#game-word.d-none
      img#game-word-drawingtoname.drawing
      br
      br
      input#game-word-in.form-control(type='text', placeholder='Enter your title here')
    br
    div.row.mb-3#game-draw-buttons.d-none
      div.col-md-6
        div.input-group
          div.input-group-prepend
            span.input-group-text Color
          input#game-drawing-color.form-control(type='color', value='#000000')
          div.input-group-append
            span.input-group-text#game-drawing-color-text #000000
      div.col-md-6
        div.input-group
          div.input-group-prepend
            span.input-group-text Size
          input#game-drawing-brushsize.form-control(type='range', value='5', min='1', max='60')
          div.input-group-append
            span.input-group-text#game-drawing-brushsize-text 5
    br
    .btn-toolbar#game-buttons.d-none
      button#game-drawing-undo.btn.btn-default.btn-lg.disabled.mr-2(type='button') Undo
      button#game-drawing-redo.btn.btn-default.btn-lg.disabled.mr-2(type='button') Redo
      button#game-send.btn.btn-primary.btn-lg(type='button') Done
  div#result.d-none
    div#result-content
    br
    #result-others.btn-group-vertical(role='group', aria-label='...')
    br
    br
    .btn-toolbar#result-buttons
      button#result-done.btn.btn-default.btn-lg(type='button') Done
  div#waiting.d-none
    div.row.justify-content-center
      div.col-sm-8
        h5 Still waiting for:
        ul#waiting-players.list-unstyled.row
        div#waiting-hostmsg.d-none
          br
          h5 You are the host!
          p If someone has left the game and their box is still white, tap 
            | their box to put them up for replacement. Anyone will be able to 
            | rejoin in their place.
        div#waiting-disconnectedmsg.d-none
          br
          h5 Someone left!
          p It looks like someone has disconnected. They are marked by a grey 
            | box above. The game will continue when someone joins this game to 
            | take their place.
  div#replace.d-none
    div#replace-choices
    br
    .btn-toolbar#replace-buttons
      button#replace-leave.btn.btn-default.btn-lg(type='button') Leave Game
